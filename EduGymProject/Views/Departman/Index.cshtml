@model List<EduGymProject.Models.EntityFramework.Departman>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <br/>
    <h2>Departman Listesi</h2>
    <br/>
    <a class="btn btn-success mt-md-4" style="position:center;" href="/Departman/Yeni">Yeni Departman Ekle</a>
    <table class="table table-bordered" id="tblDepartmanlar">
        <thead>
            <tr>
                <th>ID</th>
                <th>Ad</th>
                <th>Güncelle</th>
                <th>Sil</th>
                <th>Personeller</th>
            </tr>
        </thead>

        <tbody>

            @foreach (var departman in Model)
            {
                <tr class="@departman.id">
                    <td>@departman.id</td>
                    <td>@departman.DepartmanAd</td>
                    <td><a class="btn btn-primary" href="/Departman/Guncelle/@departman.id">Güncelle</a></td>
                    <td><a class="btn btn-warning" href="/Departman/Sil/@departman.id">Sil</a></td>
                    <td>@Ajax.ActionLink("Personelleri Göster", "PersonelleriListele", "Personal", new { id = departman.id }, new AjaxOptions { HttpMethod = "GET", UpdateTargetId = "personelListesi" }, new { @class = "btn btn-secondary" })</td>
                </tr>
            }

        </tbody>
    </table>

    <div id="personelListesi"></div>
</div>